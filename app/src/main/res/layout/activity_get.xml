<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".WebServicesActivity">


        <TextView
            android:id="@+id/txt_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/txt_perpage"
            android:layout_width="match_parent"
            android:layout_below="@+id/txt_page"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/txt_total"
            android:layout_width="match_parent"
            android:layout_below="@+id/txt_perpage"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txt_total_pages"
            android:layout_width="match_parent"
            android:layout_below="@+id/txt_total"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/txt_get"
            android:layout_width="match_parent"
            android:layout_below="@+id/txt_total_pages"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="20dp"/>



    </RelativeLayout>
</ScrollView>